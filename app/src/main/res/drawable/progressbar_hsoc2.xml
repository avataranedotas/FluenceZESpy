<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />
            <!--<solid android:color="#818181" />-->

            <stroke
                android:width="1dp"
                android:color="#808080"
                 />

            <gradient
                android:angle="270"
                android:centerColor="#c9cacaca"
                android:centerX="0.15"
                android:endColor="#c83d3c3c"
                android:startColor="#c8ededed"
                />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />
                <stroke
                    android:width="1dp"
                    android:color="#808080"
                    />

             <!--   <solid android:color="#d8ff0000" />
-->
                <gradient
                    android:angle="0"
                    android:centerX="0.25"
                    android:startColor="#e2ff0000"
                    android:centerColor="#e2ffff00"
                    android:endColor="#e200ff00" />


            </shape>
        </clip>
    </item>
</layer-list>